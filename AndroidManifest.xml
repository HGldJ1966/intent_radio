<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.zapto.smblott.intentradio"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

        <activity android:name="IntentRadio"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

       <service android:name=".IntentPlayer"/>

       <receiver android:name=".Intents" android:enabled="true" android:exported="true" >
         <intent-filter>
            <action android:name="org.zapto.smblott.intentradio.PLAY"/>
            <action android:name="org.zapto.smblott.intentradio.STOP"/>
         </intent-filter>
      </receiver>

    </application>
</manifest>
